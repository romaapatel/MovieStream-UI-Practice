<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieStreamUIPractice" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
    </style>

   <style name="buttonAppearence">
       <item name="fontFamily">@font/poppins_regular</item>
       <item name="android:textSize">@dimen/_14ssp</item>
   </style>

    <style name="textAppearence">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="forgotPasswordTextStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="forgotPasswordSubTitleTextStyle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name= "android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="homeScreenText">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name= "android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlurryTheme">
        <item name="android:windowBackgroundBlurRadius" tools:targetApi="s">30dp</item>
        <item name="android:windowBlurBehindEnabled" tools:targetApi="s">true</item>
        <item name="android:windowBlurBehindRadius" tools:targetApi="s">@dimen/_100sdp</item>
    </style>

    <style name="ChipText"  parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="chipBackgroundColor">@color/chip_background_state</item>
    </style>

    <style name="BottomNavIcon">
        <item name="itemIconTint" tools:targetApi="o">@color/bottom_nav_state</item>
    </style>

    <style name="MovieStreamOtp">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/otp_background</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
    </style>
</resources>