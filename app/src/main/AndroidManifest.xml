<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviestream_ui_practice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieStreamUIPractice">
        <activity
            android:name=".descriptionScreen.MovieStreamDescriptionActivity"
            android:exported="false" />
        <activity
            android:name=".homescreen.MovieScreamHomeScreenActivity"
            android:exported="false" />
        <activity
            android:name=".forgotpassword.MovieStreamOTPActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".forgotpassword.MovieStreamForgotPasswordLastActivity"
            android:exported="false" />
        <activity
            android:name=".forgotpassword.MovieStreamResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".forgotpassword.MovieStreamForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".signup.MovieStreamSignUpActivity"
            android:exported="false" />
        <activity
            android:name=".login.MovieStreamLoginActivity"
            android:exported="false" />
        <activity
            android:name=".splashscreen.MovieStreamOnBoardingActivity"
            android:exported="false" />
        <activity
            android:name=".splashscreen.MovieStreamSplashScreenActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>